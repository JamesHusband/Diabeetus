{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@diabetus/data-access/libre": ["libs/data-access/libre/src/index.ts"],
      "@diabetus/features/glucose-tracker": [
        "libs/feature-shells/glucose-tracker/src/index.ts"
      ],
      "@diabetus/shared/state": ["libs/shared/store/src/index.ts"],
      "@diabetus/shared/types": ["libs/shared/types/src/index.ts"],
      "@diabetus/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@diabetus/ui": ["libs/ui/components/src/index.ts"],
      "@diabetus/ui/elements": ["libs/ui/elements/src/index.ts"],
      "@diabetus/ui/server": ["libs/ui/components/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
